# Database Configuration
# SQLite database file path
DATABASE_URL="file:./dev.db"

# Authentication Secrets
# Generate secure random strings for production
# Use: openssl rand -base64 32
AUTH_SECRET="your-super-secret-auth-secret-key-replace-in-production"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-auth-secret-key-replace-in-production"

# Gemini API Configuration for Personalized Feedback
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Vercel Blob Storage Configuration
# For uploading and storing question images
# Get your token from: Vercel Dashboard → Project → Storage → Create Blob Store
# Documentation: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# Contextual Bandit Configuration
# Master switch to enable/disable contextual bandit system
CONTEXTUAL_BANDIT_ENABLED=false

# Algorithm mode: hybrid (LinUCB + IRT) | linucb (pure LinUCB) | irt-only (baseline)
CONTEXTUAL_BANDIT_MODE=hybrid

# Traffic allocation (0-100): percentage of users assigned to contextual bandit
# 0 = shadow mode (logging only, no impact on users)
# 20 = 20% A/B test
# 100 = full rollout
CONTEXTUAL_BANDIT_TRAFFIC=0

# Exploration parameter for LinUCB (default: 1.5)
# Higher = more exploration, Lower = more exploitation
CONTEXTUAL_BANDIT_ALPHA=1.5

# Verbose logging for debugging
CONTEXTUAL_BANDIT_VERBOSE=false

# Question Selection Transparency
# Show topic, Bloom's taxonomy, and difficulty badges during quiz
# Default: false (build feature but disable for A/B testing)
NEXT_PUBLIC_SHOW_QUIZ_METADATA=false

# Knowledge Gap Detection Thresholds
# Minimum response time to NOT flag as possible guess (milliseconds)
UNCERTAINTY_MIN_RESPONSE_TIME=5000

# Ability-difficulty gap threshold for "easy correct" flag
# When user's ability exceeds question difficulty by this amount, flag as potential gap
UNCERTAINTY_EASY_THRESHOLD=1.0

# Node Environment
NODE_ENV=development
